<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: current_user %>
    <h2>New book</h2>
      <%= render 'books/post', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table>
          <tr>
            <th></th>
            <th>Title</th>
            <th>opinion</th>
          </tr>


          <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag(book.user, :profile_image, :fill, 40, 40, fallback: "no-image-icon.jpg") %></td>
            <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>


        </table>
    </div>
  </div>
</div>