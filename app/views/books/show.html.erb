<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @book.user %>
      <%= render 'books/post', book: Book.new %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table>
          <tr>
            <td><%= attachment_image_tag(@book.user, :profile_image_id, :fill, 40, 40, fallback: "no-image-icon.jpg") %><br>name</td>
            <td>
            <%= link_to book_path(@book) do %>
              <%= @book.title %>
            <% end %>
            </td>
            <td><%= @book.body %></td>
            <td>Edit</td>
            <td>Destroy</td>
          </tr>
        </table>
    </div>
  </div>
</div>