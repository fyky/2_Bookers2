<div class="container">
  <div class="row">
    <div class="mx-auto  col-sm-10 col-xl-6">
      <h1>User info</h1>
        <%= form_with model:@user, local:true do |f| %>
        <h4>name</h4>
          <%= f.text_field :name %>
        <h4>Image</h4>
          <%= f.attachment_field :profile_image %>
        <h4>introduction</h4>
          <%= f.text_area :introduction %>
          <%= f.submit '保存' %>
        <% end %>
    </div>
  </div>
</div>